

<h1><%= @event.name %></h1>
<%= current_user.name %> 

<%= link_to 'Predict this event', '/events/' + @event.id.to_s + '/user_event_predictions/new' %>
<table id="event_show_table">
  <th>
    <td><%= @event.prediction1 %></td>
    <td><%= @event.prediction2 %></td>
    <td><%= @event.prediction3 %></td>
  </th>

  <tr id="event_show_table_results_row" class="<%= @event.event_status %>">
    <td>RESULTS:</td>
    <td><%= @event.prediction_1_result %></td>
    <td><%= @event.prediction_2_result %></td>
    <td><%= @event.prediction_3_result %></td>
  </tr>

  <% @event.user_event_predictions.each do |obj| %>
    <tr>
      <td><%= obj.user.name %></td>
      <td class="event_show_table_cell" data-type = <%= @event.prediction1_type %>><%= obj.prediction_1 %></td>
      <td class="event_show_table_cell" data-type = <%= @event.prediction2_type %>><%= obj.prediction_2 %></td>
      <td class="event_show_table_cell" data-type = <%= @event.prediction3_type %>><%= obj.prediction_3 %></td>
    </tr>
  <% end %>
</table>